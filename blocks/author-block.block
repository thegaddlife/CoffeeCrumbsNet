<div class="author-block">
<squarespace:query collection="blog" limit="1">
  
  <div class="featured-wrapper">
    {.repeated section items}
    <div class="featured-post">
      {.main-image?}<img {@|image-meta} />{.end}
      <h2>{title}</h2>
    </div>
    {.end}
  </div>
  
</squarespace:query>
</div>